<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />


        <LinearLayout
            android:layout_marginTop="0dp"
            android:id="@+id/layoutInput"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="120dp"

            android:layout_centerHorizontal="true"
            android:paddingTop="0dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                >

                <com.genxcloudsuite.smartgatei.customFonts.Edittext_Montserrat_Regular
                    android:id="@+id/id_oldPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_themegray"

                    android:hint="Old Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/themeGray"
                    android:drawableRight="@drawable/new_password"
                    android:drawablePadding="5dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:textSize="13dp"

                    />




                <com.genxcloudsuite.smartgatei.customFonts.Edittext_Montserrat_Regular
                    android:id="@+id/id_newPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_themegray"

                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/themeGray"
                    android:drawableRight="@drawable/new_password"
                    android:drawablePadding="5dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="13dp"

                    />


                <com.genxcloudsuite.smartgatei.customFonts.Edittext_Montserrat_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_confirmPass"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/themeGray"
                    android:background="@drawable/border_themegray"
                    android:layout_gravity="center_vertical"

                    android:drawableRight="@drawable/new_password"
                    android:drawablePadding="5dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:textSize="13dp"

                    />



            </LinearLayout>

            <com.genxcloudsuite.smartgatei.customFonts.Nbutton_Montserrat_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SET PASSWORD"
                android:textColor="@color/white"
                android:background="@drawable/bd_gradient_new"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="14dp"
                android:id="@+id/id_savePass"


                />

        </LinearLayout>

        <!--<ImageView
            android:background="@drawable/bgamount_gray_outline"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />-->
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:id="@+id/id_back"
            android:padding="10dp"/>

        <com.genxcloudsuite.smartgatei.customFonts.Montserrat_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_alignRight="@+id/id_back"
            android:padding="10dp"/>

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />


        </FrameLayout>

    <com.genxcloudsuite.smartgatei.customFonts.Montserrat_Bold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:textSize="18dp"

        android:textColor="@color/white"


        />


        <com.genxcloudsuite.smartgatei.customFonts.Montserrat_Thin
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_pass"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"

            />




    </LinearLayout>



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </LinearLayout>




</RelativeLayout>